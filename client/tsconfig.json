{
	"compilerOptions": {
		"target": "ESNext",
		// "module": "ESNext",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"module": "NodeNext", // NodeNext module instead of ESNext
		"moduleResolution": "NodeNext", // NodeNext resolution instead of node
		// "moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			]
		},
		"types": [
			"node"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue"
	],
	"exclude": [
		"node_modules"
	]
}
